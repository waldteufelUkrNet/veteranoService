doctype html
html(lang='ua')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description' content="VeteranoService - свій до свого по своє ;-)")

    title VeteranoService
    link(rel='icon', href='assets/img/logo.png')

    // css-libs (slick, animate ...)
    link(rel='stylesheet', type='text/css', href='assets/libs-css/reset.css')
    link(rel='stylesheet', type='text/css', href='assets/libs-css/animate.css')

    // jquery
    script(src='assets/libs/jquery.js')

    // own stylesheet
    link(rel='stylesheet', type='text/css', href='assets/css/business.css')

  body
    // HEADER
    include assets/BEM-blocks/header/header.pug
    // /HEADER

    // MAIN SECTION
    main.main
      // SECTION 1
      section.main-section
        h1.main-section__header БІЗНЕСИ

        .search-wrapper
          form.search
            button.search__type-btn(type='button' title='вибрати тип пошуку'): img(src="assets/img/bar-chart.png", alt="bar-chart.png")
            ul.search__type-list
              li.search__list-item
                .search__list-item-img-wrapper: img(src="assets/img/bar-chart.png", alt="bar-chart.png")
                span пошук по категоріях
              li.search__list-item
                .search__list-item-img-wrapper: img(src="assets/img/pie-chart.png", alt="pie-chart.png")
                span пошук по видах
              li.search__list-item
                .search__list-item-img-wrapper: img(src="assets/img/place-marker.png", alt="place-marker.png")
                span пошук по містах
            input.search__field(type="text")
            button.search__btn(type='button')
              i.fas.fa-search
              span пошук
      // /SECTION 1

      // SECTION 2
      section.popups-section
        include assets/BEM-blocks/popup-compliment/popup-compliment.pug
        include assets/BEM-blocks/popup-no-russian-language-suppurt/popup-no-russian-language-suppurt.pug
      // /SECTION 2

      //- .language-switcher-wrapper
      //-   include assets/BEM-blocks/language-switcher/language-switcher.pug

    // /MAIN SECTION

    // FOOTER
    //- include assets/BEM-blocks/footer/footer.pug
    // /FOOTER

    script(src='assets/libs/fontawesome-all.js')

